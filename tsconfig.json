{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es6",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es5", "es6", "es7", "dom", "dom.iterable"],
    "jsx": "react",
    "rootDirs": ["src", "test"],
    "strict": true
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/test/**/*",
    "packages/*/declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
    "packages/*/dist",
    "packages/*/examples",
    "packages/*/node_modules"
  ],
  "types": ["node"],
  "typeRoots": ["node_modules/@types"]
}
